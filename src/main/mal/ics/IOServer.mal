category System {
    asset IOServer extends IcsAsset {
        | access
            +> systemFirmware,
                blockSerialCom,
                systemFirmware
        | authenticatedAccess

        | restrictedOperations {I,A}

        & blockReportingMessage
            developer info: "T804"
            -> restrictedOperations

        & blockSerialCom
            developer info: "T805"
            -> restrictedOperations

        | externalRemoteService
            developer info: "T822"
            -> access

        | systemFirmware
            developer info: "T857"
            -> systemFirmware
        & systemFirmwareDefended
            developer info: "T857"
            -> authenticatedAccess

        # applyMultiFactorAuthentication
            developer info: "T805 - Mitigation"
            -> blockSerialCom
        # applyPrincipleOfLeastPrivilege
            developer info: "T857 - Mitigation"
            -> systemFirmwareDefended
        # restrictedPhysicalAccess
            developer info: "T857,T805 - Mitigation"
            -> systemFirmware,
                blockSerialCom
        # applyIDS
            developer info: "T857,T805 - Mitigation"
            -> systemFirmwareDefended,
                blockSerialCom
    }
}